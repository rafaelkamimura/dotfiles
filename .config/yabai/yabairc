#!/usr/bin/env sh

# Scripting addition disabled - doesn't work on macOS Sequoia
# sudo yabai --load-sa
# yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

yabai -m config external_bar               all:0:38       \
                mouse_follows_focus        off            \
                focus_follows_mouse        off            \
                window_zoom_persist        off            \
                window_placement           second_child   \
                window_shadow              float          \
                window_opacity             on             \
                window_opacity_duration    0.2            \
                active_window_opacity      1.0            \
                normal_window_opacity      0.8            \
                window_animation_duration  0.5            \
                window_animation_easing    ease_out_quint \
                insert_feedback_color      0xff9dd274     \
                split_ratio                0.50           \
                auto_balance               off            \
                mouse_modifier             fn             \
                mouse_action1              move           \
                mouse_action2              resize         \
                mouse_drop_action          swap           \
                                                          \
                top_padding                2              \
                bottom_padding             2              \
                left_padding               0              \
                right_padding              0              \
                window_gap                 4

# Exclude problematic apps from being managed:
yabai -m rule --add app="^(LuLu|Calculator|Software Update|Dictionary|VLC|System Preferences|System Settings|zoom.us|Photo Booth|Archive Utility|Python|LibreOffice|App Store|Steam|Alfred|Activity Monitor|PopClip|Bartender 4|CleanMyMac|1Blocker- Ad Blocker & Privacy)$" manage=off
yabai -m rule --add label="Finder" app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off
yabai -m rule --add label="Safari" app="^Safari$" title="^(General|(Tab|Password|Website|Extension)s|AutoFill|Se(arch|curity)|Privacy|Advance)$" manage=off
yabai -m rule --add label="About This Mac" app="System Information" title="About This Mac" manage=off
yabai -m rule --add label="Select file to save to" app="^Inkscape$" title="Select file to save to" manage=off

# Float iWork dialogs (Open, Save, Export)
yabai -m rule --add app="^(Pages|Numbers|Keynote)$" title="^(Open|Save|Export|Choose|Import)$" manage=off
# Float Finder entirely (causes tiling issues)
yabai -m rule --add app="^Finder$" manage=off

# Space assignment rules (requires spaces to be pre-created in Mission Control)
# Space 1: Terminals
yabai -m rule --add app="^(Ghostty|iTerm2|Terminal|Alacritty|kitty|WezTerm)$" space=1

# Ghostty always zoom to fullscreen (not native fullscreen)
yabai -m signal --add event=window_created app="^Ghostty$" action="yabai -m window $YABAI_WINDOW_ID --toggle zoom-fullscreen"

# Space 2: Browsers
yabai -m rule --add app="^(Safari|Google Chrome|Firefox|Brave Browser|Arc|Microsoft Edge)$" space=2

# Space 3: Development (IDEs/Editors)
yabai -m rule --add app="^(Code|Visual Studio Code|Xcode|IntelliJ IDEA|PyCharm|WebStorm|Sublime Text|Neovim|MacVim)$" space=3

# Space 4: Communication
yabai -m rule --add app="^(Slack|Discord|Telegram|.*WhatsApp|Signal|Microsoft Teams|Zoom)$" space=4

# Space 5: Media & Design
yabai -m rule --add app="^(Spotify|Music|Photos|Pixelmator|Affinity|Adobe Photoshop|Figma)$" space=5

# Window borders disabled
yabai -m config window_border_width     0

yabai -m config layout bsp

# Enhanced sketchybar integration signals
yabai -m signal --add event=space_changed action="sketchybar --trigger space_change"
yabai -m signal --add event=window_created action="sketchybar --trigger windows_on_spaces"
yabai -m signal --add event=window_destroyed action="sketchybar --trigger windows_on_spaces"
yabai -m signal --add event=window_moved action="sketchybar --trigger windows_on_spaces"

echo "yabai configuration loaded.."
